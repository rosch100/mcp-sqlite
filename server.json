{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.rosch100/mcp-sqlite",
  "description": "MCP server for working with SQLCipher 4 encrypted SQLite databases. Provides tools to read database structures, query tables, and perform CRUD operations.",
  "repository": {
    "url": "https://github.com/rosch100/mcp-sqlite",
    "source": "github"
  },
  "version": "0.1.0",
  "packages": [
    {
      "registryType": "github",
      "identifier": "rosch100/mcp-sqlite",
      "version": "0.1.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Path to the encrypted SQLite database file",
          "isRequired": true,
          "format": "string",
          "isSecret": false,
          "name": "DB_PATH"
        },
        {
          "description": "Passphrase for decrypting the database",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "DB_PASSPHRASE"
        }
      ],
      "installation": {
        "type": "source",
        "instructions": "git clone https://github.com/rosch100/mcp-sqlite.git && cd mcp-sqlite && ./gradlew build && ./gradlew installDist"
      },
      "configuration": {
        "mcpServers": {
          "encrypted-sqlite": {
            "command": "${SERVER_PATH}/build/install/mcp-sqlite/bin/mcp-sqlite",
            "args": [
              "--args",
              "{\"db_path\":\"${DB_PATH}\",\"passphrase\":\"${DB_PASSPHRASE}\"}"
            ]
          }
        }
      }
    }
  ]
}
