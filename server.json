{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.rosch100/mcp-sqlite",
  "description": "MCP server for SQLCipher 4 encrypted SQLite databases with full CRUD operations and query support",
  "repository": {
    "url": "https://github.com/rosch100/mcp-sqlite",
    "source": "github"
  },
  "version": "0.2.4",
  "packages": [
    {
      "registryType": "oci",
      "identifier": "ghcr.io/rosch100/mcp-sqlite:0.2.4",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Path to the encrypted SQLite database file",
          "isRequired": true,
          "format": "string",
          "isSecret": false,
          "name": "DB_PATH"
        },
        {
          "description": "Passphrase for decrypting the database",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "DB_PASSPHRASE"
        }
      ],
      "installation": {
        "type": "source",
        "instructions": "docker pull ghcr.io/rosch100/mcp-sqlite:latest"
      },
      "configuration": {
        "mcpServers": {
          "encrypted-sqlite": {
            "command": "docker",
            "args": [
              "run",
              "--rm",
              "-i",
              "-v",
              "${DB_PATH}:/data/database.sqlite:ro",
              "ghcr.io/rosch100/mcp-sqlite:latest",
              "--args",
              "{\"db_path\":\"/data/database.sqlite\",\"passphrase\":\"${DB_PASSPHRASE}\"}"
            ]
          }
        }
      }
    }
  ]
}
